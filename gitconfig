[user]
	name = Johann D. Gaebler
	email = me@jgaeb.com
[core]
	autocrlf = input
	editor = vim
[push]
	default = simple
[commit]
	verbose = true
[merge]
	tool = nvimdiff4
[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
	tool = nvimdiff2
[difftool "nvimdiff2"]
	cmd = nvim -d $LOCAL $REMOTE
